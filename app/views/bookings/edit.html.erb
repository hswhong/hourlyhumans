  
<div class="container my-4">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 mt-6 mb-6">
      <h1>Edit a booking</h1>
      <%= simple_form_for [@user, @booking] do |f| %>
        <%= f.input :user_bookee_id, disabled: true %>
        <%= f.input :user_booker_id, disabled: true %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.input :hours_per_day %>
        <%= f.input :description %>
        <%= f.input :total_price, disabled: true %>
        <%= f.input :is_accepted, disabled: true %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
