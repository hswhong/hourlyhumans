<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Create a booking</h1>
      <%= simple_form_for @booking do |f| %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.input :hours_per_day %>
        <%= f.input :description %>
        <%= f.input :total_price %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
