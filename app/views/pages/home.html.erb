<div class="container">
  <div class="row mt-4">
  </div>
  <div class="search-bar">
    <%= form_with url: humans_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a human"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
  </div>
  <div class="grid-card">
    <% @users.reverse.each do |user| %>
      <% if user.role == true %>
        <div class="card">
          <div class="card-info">
            <div class="d-flex flex-column justify-content-center align-items-center">
              <% if user.photo.key.present? == true %>
                <%= cl_image_tag user.photo.key, height: 80, width: 80, :class => "rounded-circle" %>
              <% else %>
                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="80">
              <% end %>
              <strong><%= link_to user.first_name, user_path(user) %></strong> <br>
            </div>
            <div>
              <strong>Category: </strong><%= user.task %> <br>
              <strong>Price: </strong>£<%= user.hourly_price %> <br>
              <strong>Location: </strong><%= user.location %> <br>
            </div>
          </div>
          <%# <button type="button" id="btn">Rent human</button> %>
          <div class="d-flex justify-content-center">
            <%= link_to "Rent this human", user_path(user), class: "btn btn-outline-primary", style: "btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="grid-card">
      <% @users.reverse.each do |user| %>
        <% if user.role == true %>
          <%= link_to user_path(user) do %>
            <div class="card d-flex">
                <div class="align-items-start flex-column" style="height: 200px;">
                  <div class="p-2">
                    <% if user.photo.key.present? == true %>
                      <%= cl_image_tag user.photo.key, height: 80, width: 80, :class => "rounded-circle" %>
                    <% else %>
                      <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="80">
                    <% end %>
                  </div>
                  <div class="d-flex justify-content-between text">
                    <div class="d-flex flex-column text p-2">
                      <h4><%= user.first_name %></h4>
                      <div class="mini-text"><%= user.task %></div>
                      <div class="mini-text"><%= user.location %></div>
                    </div>
                    <div class="d-flex flex-column align-items-top">
                      <div class="price p-1">£<%= user.hourly_price.round %></div>
                    </div>
                  </div>
                </div>
            </div>
          <% end %>
          <% end %>
        <% end %>
    </div>
</div>
